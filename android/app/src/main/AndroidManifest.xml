<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bramble.kickback" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/temp_icon"
        android:label="@string/title_activity_home"
        android:theme="@style/MyTheme" >
        <activity
            android:name="com.bramble.kickback.activities.SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bramble.kickback.activities.Home"
            android:label="@string/Kickback" >
        </activity>
        <activity
            android:name="com.bramble.kickback.activities.KickbacksList"
            android:label="@string/title_activity_kickback_list"
            android:parentActivityName="com.bramble.kickback.activities.Home" >
        </activity>
        <activity
            android:name="com.bramble.kickback.activities.KickbacksSchedule"
            android:label="@string/title_activity_kickback_schedule"
            android:parentActivityName="com.bramble.kickback.activities.Home" >
        </activity>
        <activity
            android:name="com.bramble.kickback.activities.Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.bramble.kickback.activities.Home" >
        </activity>

        <activity
            android:name="com.bramble.kickback.activities.NotificationSettings"
            android:label="@string/title_activity_notification_settings"
            android:parentActivityName="com.bramble.kickback.activities.Settings" >
        </activity>
        <activity
            android:name="com.bramble.kickback.activities.MyFriends"
            android:label="@string/title_activity_my_friends"
            android:launchMode="singleTop"
            android:parentActivityName="com.bramble.kickback.activities.Home" >
        </activity>
        <activity
            android:name="com.bramble.kickback.activities.TermsOfService"
            android:label="@string/title_activity_terms_of_service"
            android:parentActivityName="com.bramble.kickback.activities.Settings" >
        </activity>
        <activity
            android:name="com.bramble.kickback.activities.PrivacyPolicy"
            android:label="@string/title_activity_privacy_policy"
            android:parentActivityName="com.bramble.kickback.activities.Settings" >
        </activity>
        <activity
            android:name="com.bramble.kickback.activities.AddKickback"
            android:label="@string/title_activity_add_kickback"
            android:parentActivityName="com.bramble.kickback.activities.KickbacksSchedule" >
        </activity>
        <activity
            android:name="com.bramble.kickback.activities.AddFriend"
            android:label="@string/title_activity_add_friend"
            android:parentActivityName="com.bramble.kickback.activities.MyFriends" >
        </activity>
        <activity
            android:name="com.bramble.kickback.activities.AddFriendFromContacts"
            android:label="@string/title_activity_add_friend_from_contacts" >
        </activity>
        <activity
            android:name="com.bramble.kickback.activities.FriendRequests"
            android:label="@string/title_activity_friend_requests" >
        </activity>
    </application>

</manifest>
