<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bramble.kickback" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/temp_icon"
        android:label="@string/title_activity_home"
        android:theme="@style/MyTheme" >
        <activity
            android:name=".activities.SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="portrait"
            android:theme="@style/CustomNoBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Home"
            android:label="@string/Kickback" >
        </activity>
        <activity
            android:name=".activities.KickbacksList"
            android:label="@string/title_activity_kickback_list"
            android:parentActivityName=".activities.Home" >
        </activity>
        <activity
            android:name=".activities.KickbacksSchedule"
            android:label="@string/title_activity_kickback_schedule"
            android:parentActivityName=".activities.Home" >
        </activity>
        <activity
            android:name=".activities.Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".activities.Home" >
        </activity>
        <activity
            android:name=".activities.NotificationSettings"
            android:label="@string/title_activity_notification_settings"
            android:parentActivityName=".activities.Settings" >
        </activity>
        <activity
            android:name=".activities.MyFriends"
            android:label="@string/title_activity_my_friends"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.Home" >
        </activity>
        <activity
            android:name=".activities.TermsOfService"
            android:label="@string/title_activity_terms_of_service"
            android:parentActivityName=".activities.Settings" >
        </activity>
        <activity
            android:name=".activities.PrivacyPolicy"
            android:label="@string/title_activity_privacy_policy"
            android:parentActivityName=".activities.Settings" >
        </activity>
        <activity
            android:name=".activities.AddKickback"
            android:label="@string/title_activity_add_kickback"
            android:parentActivityName=".activities.KickbacksSchedule" >
        </activity>
        <activity
            android:name=".activities.AddFriend"
            android:label="@string/title_activity_add_friend"
            android:parentActivityName=".activities.MyFriends" >
        </activity>
        <activity
            android:name=".activities.AddFriendFromContacts"
            android:label="@string/title_activity_add_friend_from_contacts" >
        </activity>
        <activity
            android:name=".activities.FriendRequests"
            android:label="@string/title_activity_friend_requests" >
        </activity>

        <service android:name=".service.SignUpService" />
        <service android:name=".service.KickbackService" />

        <receiver
            android:name=".receivers.BootUpReceiver"
            android:enabled="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activities.AccountPortal"
            android:label="@string/title_activity_account_portal"
            android:theme="@style/CustomNoBar" >
        </activity>
        <activity android:name=".activities.Login"
            android:label="Login"
            android:theme="@style/CustomNoBar"
            android:windowSoftInputMode="stateVisible">
        </activity>
        <activity android:name=".activities.SignUpCredentials"
            android:label="SignUpCredentials"
            android:theme="@style/CustomNoBar"
            android:windowSoftInputMode="stateVisible">
        </activity>
        <activity android:name=".activities.SignUpBiographical"
            android:label="SignUpBiographical"
            android:theme="@style/CustomNoBar"
            android:windowSoftInputMode="stateVisible">
        </activity>
    </application>

</manifest>
