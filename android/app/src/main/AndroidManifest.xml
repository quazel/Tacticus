<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.junipertech.kickback" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyTheme" >
        <activity
            android:name=".activities.Home"
            android:label="@string/Kickback" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Kickback_List"
            android:label="@string/Kickback"
            android:parentActivityName=".activities.Home" >
        </activity>
        <activity
            android:name=".activities.Kickback_Schedule"
            android:label="@string/Schedule"
            android:parentActivityName=".activities.Home" >
        </activity>
        <activity
            android:name=".activities.Friends_Activity"
            android:label="@string/Friends"
            android:parentActivityName=".activities.Home" >
        </activity>
        <activity
            android:name=".activities.Settings"
            android:label="@string/Settings"
            android:parentActivityName=".activities.Home" >
        </activity>
        <activity
            android:name=".activities.Account_Settings"
            android:label="@string/account_info"
            android:parentActivityName=".activities.Settings" >
        </activity>
        <activity
            android:name=".activities.Privacy_Settings"
            android:label="@string/privacy_info"
            android:parentActivityName=".activities.Settings" >
        </activity>
        <activity
            android:name=".activities.Advanced_Settings"
            android:label="@string/advanced_info"
            android:parentActivityName=".activities.Settings" >
        </activity>
        <activity
            android:name=".activities.More_Information"
            android:label="@string/more_info"
            android:parentActivityName=".activities.Settings" >
        </activity>
        <activity
            android:name=".activities.Notification_Settings"
            android:label="@string/notification_settings"
            android:parentActivityName=".activities.Advanced_Settings" >
        </activity>
    </application>

</manifest>
