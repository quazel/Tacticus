<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.junipertech.kickback" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/temp_icon"
        android:label="@string/title_activity_home"
        android:theme="@style/MyTheme" >
        <activity
            android:name="com.juniper.kickback.activities.SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.juniper.kickback.activities.Home"
            android:label="@string/Kickback" >
        </activity>
        <activity
            android:name="com.juniper.kickback.activities.KickbacksList"
            android:label="@string/title_activity_kickback_list"
            android:parentActivityName="com.juniper.kickback.activities.Home" >
        </activity>
        <activity
            android:name="com.juniper.kickback.activities.KickbacksSchedule"
            android:label="@string/title_activity_kickback_schedule"
            android:parentActivityName="com.juniper.kickback.activities.Home" >
        </activity>
        <activity
            android:name="com.juniper.kickback.activities.Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.juniper.kickback.activities.Home" >
        </activity>
        <activity
            android:name="com.juniper.kickback.activities.AccountSettings"
            android:label="@string/title_activity_account_settings"
            android:parentActivityName="com.juniper.kickback.activities.Settings" >
        </activity>
        <activity
            android:name="com.juniper.kickback.activities.PrivacySettings"
            android:label="@string/title_activity_privacy_settings"
            android:parentActivityName="com.juniper.kickback.activities.Settings" >
        </activity>
        <activity
            android:name="com.juniper.kickback.activities.AdvancedSettings"
            android:label="@string/title_activity_advanced_settings"
            android:parentActivityName="com.juniper.kickback.activities.Settings" >
        </activity>
        <activity
            android:name="com.juniper.kickback.activities.MoreInformation"
            android:label="@string/title_activity_more_information"
            android:parentActivityName="com.juniper.kickback.activities.Settings" >
        </activity>
        <activity
            android:name="com.juniper.kickback.activities.NotificationSettings"
            android:label="@string/title_activity_notification_settings"
            android:parentActivityName="com.juniper.kickback.activities.AdvancedSettings" >
        </activity>
        <activity
            android:name="com.juniper.kickback.activities.MyFriends"
            android:label="@string/title_activity_my_friends"
            android:parentActivityName="com.juniper.kickback.activities.Home" >
        </activity>
        <activity
            android:name="com.juniper.kickback.activities.MyFriends_ListView"
            android:label="@string/title_activity_my_friends"
            android:parentActivityName="com.juniper.kickback.activities.Home" >
        </activity>
        <activity
            android:name="com.juniper.kickback.activities.TermsOfService"
            android:label="@string/title_activity_terms_of_service"
            android:parentActivityName="com.juniper.kickback.activities.MoreInformation" >
        </activity>
        <activity
            android:name="com.juniper.kickback.activities.PrivacyPolicy"
            android:label="@string/title_activity_privacy_policy"
            android:parentActivityName="com.juniper.kickback.activities.MoreInformation" >
        </activity>
        <activity
            android:name="com.juniper.kickback.activities.AddKickback"
            android:label="@string/title_activity_add_kickback"
            android:parentActivityName="com.juniper.kickback.activities.KickbacksSchedule" >
        </activity>
        <activity
            android:name="com.juniper.kickback.activities.AddFriend"
            android:label="@string/title_activity_add_friend"
            android:parentActivityName="com.juniper.kickback.activities.MyFriends">
        </activity>
    </application>

</manifest>
