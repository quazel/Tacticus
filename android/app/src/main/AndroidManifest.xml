<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.junipertech.kickback" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyTheme" >
        <activity
            android:name=".activities.Home"
            android:label="@string/Kickback" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.KickbacksList"
            android:label="@string/Kickback"
            android:parentActivityName=".activities.Home" >
        </activity>
        <activity
            android:name=".activities.KickbacksSchedule"
            android:label="@string/Schedule"
            android:parentActivityName=".activities.Home" >
        </activity>
        <activity
            android:name=".activities.Settings"
            android:label="@string/Settings"
            android:parentActivityName=".activities.Home" >
        </activity>
        <activity
            android:name=".activities.AccountSettings"
            android:label="@string/account_info"
            android:parentActivityName=".activities.Settings" >
        </activity>
        <activity
            android:name=".activities.PrivacySettings"
            android:label="@string/privacy_info"
            android:parentActivityName=".activities.Settings" >
        </activity>
        <activity
            android:name=".activities.AdvancedSettings"
            android:label="@string/advanced_info"
            android:parentActivityName=".activities.Settings" >
        </activity>
        <activity
            android:name=".activities.MoreInformation"
            android:label="@string/more_info"
            android:parentActivityName=".activities.Settings" >
        </activity>
        <activity
            android:name=".activities.NotificationSettings"
            android:label="@string/notification_settings"
            android:parentActivityName=".activities.AdvancedSettings" >
        </activity>
        <activity
            android:name=".activities.MyFriends"
            android:label="@string/Friends"
            android:parentActivityName=".activities.Home" >
        </activity>
        <activity
            android:name=".activities.SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>>
        </activity>
    </application>

</manifest>
