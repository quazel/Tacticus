<resources>
    
    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:actionBarStyle">@style/MyTheme.ActionBar</item>
        <item name="android:editTextStyle">@android:style/Widget.Holo.EditText</item>
        <item name="android:radioButtonStyle">@android:style/Widget.CompoundButton.CheckBox</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:homeAsUpIndicator">@drawable/custom_white_up_button</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="MyTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/primary_color</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.Text</item>
    </style>

    <style name="MyTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsTheme" parent="MyTheme">
        <item name="android:actionBarStyle">@style/SettingsTheme.ActionBar</item>
    </style>

    <style name="SettingsTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/settings_color</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.Text</item>
    </style>

    <style name="FriendsTheme" parent="MyTheme">
        <item name="android:actionBarStyle">@style/SettingsTheme.ActionBar</item>
    </style>

    <style name="FriendsTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/friends_color</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.Text</item>
    </style>

    <style name="ScheduleTheme" parent="MyTheme">
        <item name="android:actionBarStyle">@style/SettingsTheme.ActionBar</item>
    </style>

    <style name="ScheduleTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/schedule_color</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.Text</item>
    </style>
    
</resources>