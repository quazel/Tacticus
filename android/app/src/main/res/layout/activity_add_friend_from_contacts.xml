<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarThumbVertical="@drawable/scrollbar_green_vertical"
    android:paddingLeft="@dimen/list_activity_horizontal_margin"
    android:paddingRight="@dimen/list_activity_horizontal_margin"
    android:paddingTop="@dimen/list_activity_vertical_margin"
    android:paddingBottom="@dimen/list_activity_vertical_margin"
    android:theme="@android:style/Theme.NoTitleBar"
    android:background="@color/white"
    tools:context="com.junipertech.kickback.activities.AddFriendFromContacts"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_height"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:textSize="@dimen/list_header_text_size"
            android:background="@drawable/title_label"
            android:textColor="@color/title_text_color"
            android:text="ADD FRIENDS FROM CONTACTS"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:gravity="start|center_vertical"/>
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:orientation="vertical"
            android:id="@+id/friends_from_contacts">
        </ListView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/header_height"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:textSize="@dimen/list_header_text_size"
            android:background="@drawable/title_label"
            android:textColor="@color/title_text_color"
            android:text="INVITE FRIENDS TO KICKBACK"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:gravity="start|center_vertical"/>
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:orientation="vertical"
            android:id="@+id/invite_friends">
        </ListView>

    </LinearLayout>
</ScrollView>



