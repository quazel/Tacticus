<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:id="@+id/add_friends_actionbar"
        android:background="@drawable/add_friends_actionbar_background">

        <Button
            android:layout_width="@dimen/up_button_width"
            android:layout_height="fill_parent"
            android:background="@color/transparent"
            android:id="@+id/add_friends_back_button"
            android:onClick="addFriendsBackButtonPressed"/>
        <ImageView
            android:layout_width="@dimen/up_button_side_lengths"
            android:layout_height="@dimen/up_button_side_lengths"
            android:background="@drawable/custom_white_up_button"
            android:layout_centerVertical="true"
            android:id="@+id/add_friends_up_button"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Friends"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/action_bar_text_size"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/add_friends_up_button"
            android:layout_toEndOf="@+id/add_friends_up_button"
            android:id="@+id/add_friends_textview"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_below="@id/add_friends_actionbar"
        android:id="@+id/add_friends_tab_layout">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/add_friend_from_contacts"
            android:text="add from contacts"/>

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/primary_color"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/add_friend_requests"
            android:text="friend requests"/>

        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/primary_color"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/add_friend_search_by_number"
            android:text="search for friends"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/add_friends_container"
        android:layout_below="@id/add_friends_tab_layout"/>

</RelativeLayout>