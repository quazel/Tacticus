<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tile_selector_magenta">

    <TextView android:id="@+id/nickname_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/online_tile_text_color_magenta"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <TextView android:id="@+id/tag_1_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nickname_place"
        android:textColor="@color/white"
        android:gravity="top"
        android:textSize="@dimen/list_item_secondary_text_size"/>

</RelativeLayout>