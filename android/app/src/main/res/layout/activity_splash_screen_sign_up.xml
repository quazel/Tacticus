<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@android:style/Theme.NoTitleBar"
    android:background="@color/white"
    tools:context="com.junipertech.kickback.activities.SplashScreen">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDesiredUsername"
        android:background="@drawable/edittext_selector"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:hint="Username"
        android:inputType="text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <Space
        android:layout_width="fill_parent"
        android:layout_height="@dimen/space_height"
        android:layout_below="@+id/editTextDesiredUsername"
        android:id="@+id/space_1"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEmail"
        android:background="@drawable/edittext_selector"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/space_1"
        android:layout_centerHorizontal="true" />
    <Space
        android:layout_width="fill_parent"
        android:layout_height="@dimen/space_height"
        android:layout_below="@+id/editTextEmail"
        android:id="@+id/space_2"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDesiredPassword"
        android:background="@drawable/edittext_selector"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@+id/space_2"
        android:layout_centerHorizontal="true" />
    <Space
        android:layout_width="fill_parent"
        android:layout_height="@dimen/space_height"
        android:layout_below="@+id/editTextDesiredPassword"
        android:id="@+id/space_3"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextConfirmDesiredPassword"
        android:background="@drawable/edittext_selector"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_below="@+id/space_3"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="Sign Up"
            android:layout_weight="1"
            android:background="@drawable/outlined_selector"
            android:textSize="25sp"
            android:id="@+id/buttonSignUp"
            android:onClick="signUpPressed"/>

        <Button
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:text="Cancel"
            android:layout_weight="1"
            android:background="@drawable/outlined_selector"
            android:textSize="25sp"
            android:id="@+id/buttonCancelSignUp"
            android:onClick="cancelSignUpPressed"/>

    </LinearLayout>

</RelativeLayout>