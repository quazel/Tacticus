<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@android:style/Theme.NoTitleBar"
    android:background="@color/white"
    tools:context="com.junipertech.kickback.activities.SplashScreen">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDesiredUsername"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:hint="Username"
        android:inputType="text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDesiredPassword"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@+id/editTextDesiredUsername"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextConfirmDesiredPassword"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_below="@+id/editTextDesiredPassword"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:text="Sign up"
        android:textStyle="bold"
        android:background="@drawable/button_shape"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:id="@+id/buttonSignUp"
        android:onClick="signUpPressed"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>