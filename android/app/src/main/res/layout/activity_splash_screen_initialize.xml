<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@android:style/Theme.NoTitleBar"
    android:background="@color/white"
    tools:context="com.junipertech.kickback.activities.SplashScreen">


    <Button
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:text="Sign In"
        android:textStyle="bold"
        android:background="@drawable/button_shape"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:id="@+id/buttonChooseSignIn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onSignInPressed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/darkGreen"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/textViewOr"
        android:layout_below="@+id/buttonChooseSignIn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:text="Sign Up"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/button_shape"
        android:id="@+id/buttonChooseSignUp"
        android:layout_below="@+id/textViewOr"
        android:layout_centerHorizontal="true"
        android:onClick="onSignUpPressed"/>
</RelativeLayout>
