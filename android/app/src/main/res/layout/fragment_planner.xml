<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:id="@+id/planner_actionbar"
        android:background="@color/schedule_color">

        <Button
            android:layout_width="@dimen/up_button_width"
            android:layout_height="fill_parent"
            android:background="@color/transparent"
            android:id="@+id/planner_back_button"
            android:onClick="plannerBackButtonPressed"/>

        <ImageView
            android:layout_width="@dimen/up_button_side_lengths"
            android:layout_height="@dimen/up_button_side_lengths"
            android:background="@drawable/custom_white_up_button"
            android:layout_centerVertical="true"
            android:id="@+id/planner_up_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Kickbacks"
            android:textColor="@color/white"
            android:textSize="@dimen/action_bar_text_size"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/planner_up_button"
            android:layout_toEndOf="@+id/planner_up_button"
            android:id="@+id/planner_textview"/>

    </RelativeLayout>

    <se.emilsjolander.stickylistheaders.StickyListHeadersListView
        android:id="@+id/kickbacks_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_below="@+id/planner_actionbar"/>


</RelativeLayout>