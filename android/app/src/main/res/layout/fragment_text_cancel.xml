<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/full_width_selector"
            android:id="@+id/text_several"
            android:onClick="textSeveralPressed"/>

        <ImageView
            android:layout_width="@dimen/icon_large_dimensions"
            android:layout_height="@dimen/icon_large_dimensions"
            android:background="@drawable/purple_txt"
            android:layout_centerVertical="true"
            android:id="@+id/text_several_icon"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/full_width_selector"
            android:id="@+id/cancel_several"
            android:onClick="cancelSeveralPressed"/>

        <ImageView
            android:layout_width="@dimen/icon_large_dimensions"
            android:layout_height="@dimen/icon_large_dimensions"
            android:background="@drawable/purple_cancel"
            android:layout_centerVertical="true"
            android:id="@+id/cancel_several_icon"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</LinearLayout>