<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_item_height"
        android:id="@+id/sticky_item_body"
        android:background="@drawable/full_width_button_nobottom"
        android:layout_toLeftOf="@+id/search_remove_button_container">
        <LinearLayout
            android:id="@+id/body_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:orientation="vertical"
            android:paddingBottom="9dp">

            <TextView android:id="@+id/search_nickname_thing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="17dp"
                android:textSize="@dimen/list_item_primary_text_size"
                android:textColor="@color/primary_body_text_color"
                android:gravity="left|center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"/>

            <TextView android:id="@+id/search_phone_number_thing"
                android:layout_width="fill_parent"
                android:textColor="@color/secondary_body_text_color"
                android:gravity="left|top"
                android:textSize="@dimen/list_item_secondary_text_size"
                android:paddingLeft="13dp"
                android:paddingRight="12dp"
                android:paddingBottom="4dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/darkGray"
            android:layout_alignParentBottom="true"
            android:id="@+id/search_item_bottom_line"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height"
        android:layout_alignParentRight="true"
        android:background="@color/white"
        android:id="@+id/search_remove_button_container">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:background="@drawable/purple_add"/>

         <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/transparent"
            android:id="@+id/search_remove_button"/>

    </RelativeLayout>

</RelativeLayout>

